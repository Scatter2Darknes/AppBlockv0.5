<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/view_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/view_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/view_task_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due: 2025-01-01"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:paddingBottom="12dp" />

    <CheckBox
        android:id="@+id/view_task_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/view_task_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/view_task_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white" />
    </LinearLayout>
</LinearLayout>
