<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Shown when any permission is missing -->
    <TextView
        android:id="@+id/permission_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Grant all permissions to use app features."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:visibility="gone" />

    <!-- Tapped to drive the next missingâ€permission dialog -->
    <Button
        android:id="@+id/btn_grant_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Permissions"
        android:visibility="gone" />

    <!-- Only visible once _all_ permissions are granted -->
    <Button
        android:id="@+id/btn_app_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Blocked Apps"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:visibility="gone"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btn_monitored_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Blocked Apps"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>
</LinearLayout>
